{
  "defaultSeverity": "error",
  "extends": [
    "tslint:recommended"
  ],
  "jsRules": {
    "no-empty": true
  },
  "rules": {
    "eofline": true,
    "align": [
      true,
      "parameters",
      "statements"
    ],
    "max-line-length": [
      true,
      {
        "limit": 120,
        "ignore-pattern": "^import .*|^export .*| implements",
        "check-strings": true,
        "check-regex": true
      }
    ],
    "quotemark": [
      true,
      "single"
    ],
    "interface-name": [
      true,
      "never-prefix"
    ],
    "trailing-comma": [
      true,
      {
        "multiline": {
          "objects": "always",
          "arrays": "always",
          "functions": "never",
          "typeLiterals": "ignore",
          "imports": "always"
        },
        "esSpecCompliant": true
      }
    ]
  },
  "rulesDirectory": []
}